@using Saad.Helpers
        
<script type="text/javascript">
    $(document).ready(function () {
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "onclick": null,
            "showDuration": "400",
            "hideDuration": "1000",
            "timeOut": "7000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }

        @foreach (var msg in TempData) {
            var type = MessageType.GetByKey(msg.Key);
            
            @Html.Raw("toastr['" + @type.ToastrNotification + "']('" + @msg.Value + "');");

        }
    });

</script>
 