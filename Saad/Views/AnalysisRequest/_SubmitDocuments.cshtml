@model Saad.Models.AnalysisRequestDetailsViewModel


@foreach (var document in Model.DocumentsToSend) {
    if (document.Reference.EndsWith("HOMOLON") && Model.Request.Customer.Id != 1) {
        continue;
    }
    
    <div class="row">
        <div class="col-lg-12">
            <div class="file-box">
                <div class="clearfix tooltip-demo">
                    <div class="file">
                        <a href="#">
                            <span class="corner"></span>

                            <div class="icon">
                                <i class="fa fa-file"></i>
                            </div>

                        </a>
                    </div>
                    <div class="pull-left">
                        @Html.EllipsisElementWithTooltip("p", "Documento: " + document.Name, 58)
                        <p>Tipo: @document.Type</p>
                        <p>Relevância: @document.Relevance</p>
                    </div>

                    <a href="#" class="btn btn-outline btn-success pull-right" data-toggle="tooltip" data-placement="top" title="" data-original-title="@document.Details"><i class="fa fa-info"></i></a>
                </div>
                <div class="file-name">
                    <div class="fileinput fileinput-new" data-provides="fileinput">
                        <span class="btn btn-success btn-file">
                            <span class="fileinput-new"><i class="fa fa-cloud-upload"></i> Upload</span>
                            <span class="fileinput-exists">Alterar</span><input type="file" id="doc1" name="@document.Id" />
                        </span>
                        <span class="fileinput-filename"></span>
                        <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="float: none">×</a>
                        <a href="#" name="justify-link" class="btn btn-sm btn-link fileinput-new">Clique aqui se você não possuir esse documento</a>

                        <div class="pull-right fileinput-exists">
                            <label for="exampleInputName2">Data Referência</label>
                            <input type="text" name="@string.Concat("referencedate-", document.Id)" class="reference-date form-control" style="width:80px" />
                        </div>

                    </div>
                    
                    <div class="form-inline m-b-lg" style="display: none">
                        <div class="form-group col-lg-11">
                            <label for="exampleInputName2">Justificativa</label>
                            <input type="text" name="@string.Concat("reason-", document.Id)" class="form-control" style="width:83%" placeholder="Justifique porque você não enviará esse documento" />
                        </div>
                            
                        <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                </div>
            </div>
            <hr />

                
        </div>
    </div>

}

<div class="file-box">
    <div class="file">
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
</div>
